{
  "name": "draft-js-color-picker",
  "version": "1.0.0",
  "description": "draft-js dynamic color picker",
  "main": "build/index.js",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "start": "node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "test": "mocha --compilers js:babel-core/register --require ./config/test_helper.js --recursive ./tests/*.spec.js",
    "test:watch": "yarn test -- --watch",
    "watch": "watch 'npm run build' src",
    "build": "babel src -d build",
    "webpack-build": "webpack",
    "deploy": "yarn webpack-build && gh-pages -d docs",
    "prepublish": "yarn build",
    "release": "np && yarn deploy"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-1",
      "react"
    ]
  },
  "engines": {
    "node": ">=4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webdeveloperpr/draft-js-color-picker.git"
  },
  "keywords": [
    "draft-js",
    "color",
    "picker",
    "colors",
    "dynamic",
    "custom",
    "styles"
  ],
  "author": "Luis Betancourt <webdeveloperpr@gmail.com> (https://github.com/webdeveloperpr)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webdeveloperpr/draft-js-color-picker/issues"
  },
  "homepage": "https://github.com/webdeveloperpr/draft-js-color-picker#readme",
  "dependencies": {
    "draft-js": "0.10.0",
    "draft-js-custom-styles": "1.3.1",
    "immutable": "3.8.1",
    "lodash.debounce": "4.0.8",
    "react-color": "^2.13.3"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "^6.2.1",
    "babel-eslint": "7.0.0",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-1": "^6.1.18",
    "chai": "^3.5.0",
    "css-loader": "0.25.0",
    "draft-js-export-html": "0.5.4",
    "draft-js-raw-content-state": "1.0.3",
    "enzyme": "2.5.1",
    "eslint": "3.7.0",
    "eslint-config-airbnb": "12.0.0",
    "eslint-loader": "1.5.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.2",
    "eslint-plugin-react": "6.3.0",
    "file-loader": "0.9.0",
    "gh-pages": "1.0.0",
    "jsdom": "^8.1.0",
    "mocha": "^2.4.5",
    "np": "2.15.0",
    "react": "15.5.0",
    "react-addons-test-utils": "15.5.0",
    "react-dom": "15.5.0",
    "sass-loader": "4.0.2",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "watch": "1.0.2",
    "webpack": "1.13.2",
    "webpack-dev-server": "^1.14.0"
  }
}
